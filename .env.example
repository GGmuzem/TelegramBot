WEBHOOK_SECRET=your_webhook_secret_key

# Database Configuration
DATABASE_URL=postgresql+asyncpg://bot_user:your_password@postgres:5432/telegram_bot
DB_PASSWORD=your_secure_password_123
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://:your_redis_password@redis:6379/0
REDIS_PASSWORD=your_redis_password_456

# MinIO Storage Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minio_secure_password_789
MINIO_BUCKET_NAME=ai-images
MINIO_SECURE=false

# ЮKassa Payment Configuration
YOOKASSA_SHOP_ID=your_yookassa_shop_id
YOOKASSA_SECRET_KEY=your_yookassa_secret_key
YOOKASSA_WEBHOOK_SECRET=your_yookassa_webhook_secret

# CloudPayments Configuration
CLOUDPAYMENTS_PUBLIC_ID=your_cloudpayments_public_id
CLOUDPAYMENTS_SECRET_KEY=your_cloudpayments_secret_key
CLOUDPAYMENTS_WEBHOOK_SECRET=your_cloudpayments_webhook_secret

# Russian Legal Compliance (54-ФЗ)
COMPANY_INN=1234567890
COMPANY_NAME="ООО Ваша IT Компания"
COMPANY_PHONE="+7(999)123-45-67"
COMPANY_EMAIL="support@yourcompany.ru"
COMPANY_ADDRESS="г. Москва, ул. Примерная, д. 1"

# OFD (Operator of Fiscal Data) для чеков
OFD_LOGIN=your_ofd_login
OFD_PASSWORD=your_ofd_password
FISCAL_DRIVE_NUMBER=1234567890123456

# AI Generation Configuration
MODEL_CACHE_DIR=./models
GPU_DEVICES=0,1,2
MAX_GENERATION_TIME=300
DEFAULT_STEPS=20

# Security Configuration
SECRET_KEY=your_super_secret_jwt_key_change_in_production
ENCRYPTION_KEY=your_32_character_encryption_key_

# Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
GRAFANA_PASSWORD=your_grafana_admin_password
PROMETHEUS_RETENTION_TIME=30d
SENTRY_DSN=your_sentry_dsn_if_using

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_GENERATIONS_PER_HOUR=10
MAX_PAYMENTS_PER_DAY=5

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_RATE_LIMITING=true
ENABLE_IMAGE_MODERATION=true
