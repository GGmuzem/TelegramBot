# Dockerfile для Telegram Bot
FROM python:3.11-slim

# Устанавливаем системные зависимости
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    software-properties-common \
    git \
    && rm -rf /var/lib/apt/lists/*

# Создаем рабочую директорию
WORKDIR /app

# Копируем requirements
COPY requirements.txt .

# Устанавливаем Python зависимости
RUN pip install --no-cache-dir --upgrade pip
RUN pip install --no-cache-dir -r requirements.txt

# Создаем непривилегированного пользователя
RUN adduser --disabled-password --gecos '' --shell /bin/bash user \
    && chown -R user:user /app
USER user

# Копируем код приложения
COPY --chown=user:user ./src /app/src
COPY --chown=user:user ./config.py /app/
COPY --chown=user:user ./database_models.py /app/
COPY --chown=user:user ./database_crud.py /app/
COPY --chown=user:user ./telegram_bot.py /app/
COPY --chown=user:user ./redis_client.py /app/

# Устанавливаем переменные окружения
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Открываем порт
EXPOSE 8000

# Команда запуска
CMD ["python", "telegram_bot.py"]
